<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/views/entry.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>to_app</from-outcome>
            <to-view-id>/views/app.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/views/app.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>to_start</from-outcome>
            <to-view-id>/views/entry.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <managed-bean>
        <managed-bean-name>hitResults</managed-bean-name>
        <managed-bean-class>com.example.WebLab3.beans.HitResults</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>hitDTO</property-name>
            <value>#{hitDTO}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>persistenceFactory</managed-bean-name>
        <managed-bean-class>com.example.WebLab3.beans.dto.PersistenceFactory</managed-bean-class>
        <managed-bean-scope>none</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>hitDTO</managed-bean-name>
        <managed-bean-class>com.example.WebLab3.beans.dto.HitDTO</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>entityManagerFactory</property-name>
            <value>#{persistenceFactory.entityManagerFactory}</value>
        </managed-property>
    </managed-bean>
</faces-config>